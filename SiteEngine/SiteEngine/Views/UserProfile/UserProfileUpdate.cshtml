@using SiteEngine.Models.UserProfiles
@model UserProfileModel

@{
    Layout = "~/Views/Shared/mainContent.cshtml";
}

<div class="container">
    <div class="row row-gap-3 align-items-center">
        <div class="col-3">

        </div>

        <div class="col">
            <div class="row">
                <div class="row">
                    <div class="justify-content-center d-flex">
                        <h6>Изменение профиля пользователя</h6>
                    </div>
                </div>

                <div class="row">
                    <div class="justify-content-center d-flex">
                        <form asp-action="my-profile-update" asp-controller="UserProfile" method="post">
                            <div class="row p-2">
                                <div class="col input-group">
                                    <div class="form-floating">
                                        <input asp-for="FirstName"
                                               type="text"
                                               class="form-control"
                                               placeholder="Имя пользователя"
                                               value="@Model.FirstName"/>
                                        <label asp-for="FirstName" class="form-label">Имя</label>
                                    </div>
                                    <span class="text-danger" asp-validation-for="FirstName"></span>
                                </div>
                            </div>

                            <div class="row p-2">
                                <div class="col input-group">
                                    <div class="form-floating">
                                        <input asp-for="MiddleName"
                                               type="text"
                                               class="form-control"
                                               placeholder="Отчество пользователя"
                                               value="@Model.MiddleName" />
                                        <label asp-for="MiddleName" class="form-label">Отчество</label>
                                    </div>
                                    <span class="text-danger" asp-validation-for="MiddleName"></span>
                                </div>
                            </div>

                            <div class="row p-2">
                                <div class="col input-group">
                                    <div class="form-floating">
                                        <input asp-for="LastName"
                                               type="text"
                                               class="form-control"
                                               placeholder="Фамилия пользователя"
                                               value="@Model.LastName" />
                                        <label asp-for="LastName" class="form-label">Фамилия</label>
                                    </div>
                                    <span class="text-danger" asp-validation-for="LastName"></span>
                                </div>
                            </div>

                            <div class="row p-2">
                                <div class="col input-group">
                                    <div class="form-floating">
                                        <input asp-for="Birthday"
                                               type="datetime"
                                               class="form-control"
                                               placeholder="Дата рождения"
                                               value="@Model.Birthday" />
                                        <label asp-for="Birthday" class="form-label">Дата рождения</label>
                                    </div>
                                    <span class="text-danger" asp-validation-for="Birthday"></span>
                                </div>
                            </div>

                            <div class="p-2 flex-fill d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Сохранить изменения</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-3">

        </div>
    </div>
</div>